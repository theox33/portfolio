---
// About section component with modern design
import profile from '../content/profile.json';
import { Icon } from 'astro-icon/components';
---
<section id="about" class="py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold gradient-text inline-block mb-4">
        À propos de moi
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="glass-dark rounded-2xl p-8 md:p-12 hover-lift">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
            <Icon name="mdi:account-circle" class="w-7 h-7 text-white" />
          </div>
          <div>
            <p class="text-lg md:text-xl leading-relaxed text-gray-300">
              {profile.about}
            </p>
          </div>
        </div>

        <!-- Additional info boxes -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
          <div class="text-center p-4 rounded-lg bg-purple-500/10 border border-purple-500/20">
            <Icon name="mdi:school" class="w-8 h-8 text-purple-400 mx-auto mb-2" />
            <h3 class="font-semibold text-white mb-1">Formation</h3>
            <p class="text-sm text-gray-400">ESEO Angers</p>
          </div>
          <div class="text-center p-4 rounded-lg bg-pink-500/10 border border-pink-500/20">
            <Icon name="mdi:chip" class="w-8 h-8 text-pink-400 mx-auto mb-2" />
            <h3 class="font-semibold text-white mb-1">Spécialité</h3>
            <p class="text-sm text-gray-400">Systèmes embarqués</p>
          </div>
          <div class="text-center p-4 rounded-lg bg-blue-500/10 border border-blue-500/20">
            <Icon name="mdi:rocket-launch" class="w-8 h-8 text-blue-400 mx-auto mb-2" />
            <h3 class="font-semibold text-white mb-1">Passion</h3>
            <p class="text-sm text-gray-400">Innovation Tech</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

