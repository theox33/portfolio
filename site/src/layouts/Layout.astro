---
// Layout component: wraps pages and provides global structure
import '../styles/global.css';
const { default: Header } = await import('../components/Header.astro');
const { default: NavBar } = await import('../components/NavBar.astro');
const { default: Footer } = await import('../components/Footer.astro');
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><slot name="title" /></title>
    <link rel="icon" type="image/png" href={`${baseUrl}images/avatar.png`} />
  </head>
  <body class="bg-white text-gray-900 font-sans">
    <Header />
    <NavBar />
    <main class="max-w-7xl mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>

