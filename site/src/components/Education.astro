---
// Education section component
import profile from '../content/profile.json';
import { Icon } from 'astro-icon/components';
---

<section id="education" class="py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold gradient-text inline-block mb-4">
        Formation
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <div class="max-w-4xl mx-auto space-y-6">
      {profile.education.map((edu, index) => (
        <div class="glass-dark rounded-2xl p-6 md:p-8 hover-lift">
          <div class="flex items-start gap-4">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center flex-shrink-0">
              <Icon name="mdi:school" class="w-8 h-8 text-white" />
            </div>
            <div class="flex-1">
              <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
                {edu.degree}
              </h3>
              <div class="flex flex-wrap items-center gap-2 text-gray-300 mb-2">
                <span class="font-semibold text-blue-400">{edu.school}</span>
                <span class="text-gray-500">•</span>
                <span class="flex items-center gap-1">
                  <Icon name="mdi:map-marker" class="w-4 h-4" />
                  {edu.location}
                </span>
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-400 mb-4">
                <Icon name="mdi:calendar" class="w-4 h-4" />
                <span>{edu.period}</span>
              </div>
              <p class="text-gray-300 leading-relaxed">
                {edu.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Languages Section -->
    <div class="max-w-4xl mx-auto mt-12">
      <h3 class="text-2xl md:text-3xl font-bold text-white mb-6 text-center">
        Langues
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {profile.languages.map((lang) => (
          <div class="glass-dark rounded-xl p-6 text-center hover-lift">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-pink-500 to-purple-500 flex items-center justify-center mx-auto mb-4">
              <Icon name="mdi:translate" class="w-8 h-8 text-white" />
            </div>
            <h4 class="text-xl font-bold text-white mb-2">{lang.name}</h4>
            <p class="text-purple-300 font-semibold mb-2">{lang.level}</p>
            {lang.certification && (
              <p class="text-sm text-gray-400 bg-purple-500/10 border border-purple-500/20 rounded-full px-3 py-1 inline-block">
                {lang.certification}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Interests Section -->
    <div class="max-w-4xl mx-auto mt-12">
      <h3 class="text-2xl md:text-3xl font-bold text-white mb-6 text-center">
        Centres d'Intérêt
      </h3>
      <div class="glass-dark rounded-xl p-8">
        <div class="flex flex-wrap justify-center gap-4">
          {profile.interests.map((interest) => (
            <div class="flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-purple-500/20 to-pink-500/20 border border-purple-500/30 rounded-full hover:scale-105 transition-transform">
              <Icon name="mdi:star" class="w-5 h-5 text-yellow-400" />
              <span class="text-white">{interest}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
