---
// Skills section with categorized skills
import profile from '../content/profile.json';
import { Icon } from 'astro-icon/components';

const skillCategories = [
  {
    title: 'Langages & Programmation',
    icon: 'mdi:code-braces',
    color: 'from-purple-500 to-pink-500',
    skills: profile.skills.languages
  },
  {
    title: 'Syst√®mes Embarqu√©s',
    icon: 'mdi:chip',
    color: 'from-blue-500 to-cyan-500',
    skills: profile.skills.embedded
  },
  {
    title: 'Conception & Architecture',
    icon: 'mdi:draw',
    color: 'from-green-500 to-emerald-500',
    skills: profile.skills.design
  },
  {
    title: 'DevOps & Outils',
    icon: 'mdi:server',
    color: 'from-orange-500 to-red-500',
    skills: profile.skills.devops
  },
  {
    title: 'D√©veloppement Web',
    icon: 'mdi:web',
    color: 'from-pink-500 to-rose-500',
    skills: profile.skills.web
  },
  {
    title: 'Tests & Qualit√©',
    icon: 'mdi:test-tube',
    color: 'from-yellow-500 to-amber-500',
    skills: profile.skills.testing
  }
];
---

<section id="skills" class="py-20 bg-gradient-to-b from-purple-900/10 to-transparent">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold gradient-text inline-block mb-4">
        Comp√©tences Techniques
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {skillCategories.map((category) => (
        <div class="glass-dark rounded-2xl p-6 md:p-8 hover-lift">
          <div class="flex items-center gap-4 mb-6">
            <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${category.color} flex items-center justify-center`}>
              <Icon name={category.icon} class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-2xl font-bold text-white">{category.title}</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="px-3 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-sm text-gray-300 hover:border-purple-500/50 hover:bg-purple-500/10 hover:scale-105 transition-all duration-200">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-400 text-lg">
        Et bien plus encore... Toujours en apprentissage ! üöÄ
      </p>
    </div>
  </div>
</section>

