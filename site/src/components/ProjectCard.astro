---
// Simple project card component
const { title, description, technos } = Astro.props;
---

<div class="bg-white rounded-lg shadow hover-lift p-6">
  <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <ul class="flex flex-wrap gap-2">
    {technos?.map((tech) => (
      <li key={tech} class="bg-blue-100 text-blue-700 rounded-full px-3 py-1 text-sm">
        {tech}
      </li>
    ))}
  </ul>
</div>
