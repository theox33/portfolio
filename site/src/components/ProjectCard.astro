---
// Project card component
const { title, description, technos, link } = Astro.props;
---
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl">
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100">{title}</h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">{description}</p>
    <ul class="flex flex-wrap gap-2 mb-4">
      {technos?.map(tech => (
        <li class="bg-secondary text-white rounded-full px-3 py-1 text-sm" key={tech}>{tech}</li>
      ))}
    </ul>
    {link && (
      <a href={link} class="inline-block text-secondary hover:underline font-medium" target="_blank" rel="noopener noreferrer">Voir le projet â†’</a>
    )}
  </div>
</div>
