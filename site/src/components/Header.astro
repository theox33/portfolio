---
// Header component: displays avatar, name, and tagline
import profile from '../content/profile.json';
import { Icon } from 'astro-icon/components';
const baseUrl = import.meta.env.BASE_URL;
---
<header class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 via-purple-900 to-gray-900">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-600/20 via-pink-600/20 to-blue-600/20 animate-gradient"></div>
  
  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>

  <!-- Floating particles effect -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center hero-content">
    <!-- Avatar with glow effect -->
    <div class="mb-8 inline-block hero-avatar">
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full blur-2xl opacity-50 animate-pulse"></div>
        <img 
          src={`${baseUrl}images/avatar.png`}
          alt="Photo de ThÃ©o" 
          class="relative w-40 h-40 md:w-48 md:h-48 rounded-full border-4 border-purple-500/50 object-cover shadow-2xl backdrop-blur-sm"
          loading="eager" 
        />
      </div>
    </div>

    <!-- Name with gradient text -->
    <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent">
      {profile.name}
    </h1>

    <!-- Tagline with typing effect -->
    <p class="text-xl md:text-2xl text-purple-200 mb-8 font-light">
      {profile.tagline}
    </p>

    <!-- CTA Buttons with magnetic effect -->
    <div class="flex gap-4 justify-center flex-wrap">
      <a 
        href="#projects" 
        class="magnetic-btn px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full font-semibold shadow-lg hover:shadow-purple-500/50 transition-all duration-300 hover:scale-105"
      >
        Voir mes projets
      </a>
      <a 
        href="#contact" 
        class="magnetic-btn px-8 py-3 border-2 border-purple-400 text-purple-200 rounded-full font-semibold hover:bg-purple-400/10 transition-all duration-300"
      >
        Me contacter
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <Icon name="mdi:chevron-down" class="w-8 h-8 text-purple-300" />
    </div>
  </div>
</header>
