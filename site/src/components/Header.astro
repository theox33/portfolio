---
// Header component: displays avatar, name, and tagline
import profile from '../content/profile.json';
const baseUrl = import.meta.env.BASE_URL;
---
<header class="bg-gray-100 border-b border-gray-200 py-8">
  <div class="max-w-7xl mx-auto px-4 flex flex-col items-center text-center">
    <img 
      src={`${baseUrl}images/avatar.png`} 
      alt="Photo de ThÃ©o" 
      class="w-32 h-32 rounded-full border-4 border-blue-500 mb-4 object-cover" 
      loading="lazy" 
    />
    <h1 class="text-3xl font-bold text-gray-900 mb-2">{profile.name}</h1>
    <p class="text-blue-600 text-lg">{profile.tagline}</p>
  </div>
</header>
