---
// Experience section component with timeline design
import experiences from '../content/experiences.json';
import { Icon } from 'astro-icon/components';
---

<section id="experience" class="py-20 bg-gradient-to-b from-transparent to-purple-900/10">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold gradient-text inline-block mb-4">
        Expériences Professionnelles
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <div class="relative">
      <!-- Timeline line -->
      <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-purple-500 via-pink-500 to-purple-500"></div>

      <div class="space-y-12">
        {experiences.map((exp, index) => (
          <div class={`relative ${index % 2 === 0 ? 'md:pr-[50%]' : 'md:pl-[50%]'}`}>
            <!-- Timeline dot -->
            <div class="hidden md:block absolute left-1/2 top-8 transform -translate-x-1/2 -translate-y-1/2">
              <div class="w-6 h-6 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 border-4 border-gray-900 pulse-dot"></div>
            </div>

            <div class={`glass-dark rounded-2xl p-6 md:p-8 hover-lift ${index % 2 === 0 ? 'md:mr-8' : 'md:ml-8'}`}>
              <!-- Header -->
              <div class="flex items-start gap-4 mb-4">
                <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
                  <Icon name="mdi:briefcase" class="w-8 h-8 text-white" />
                </div>
                <div class="flex-1">
                  <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
                    {exp.title}
                  </h3>
                  <div class="flex flex-wrap items-center gap-2 text-gray-300">
                    <span class="font-semibold text-purple-400">{exp.company}</span>
                    <span class="text-gray-500">•</span>
                    <span class="flex items-center gap-1">
                      <Icon name="mdi:map-marker" class="w-4 h-4" />
                      {exp.location}
                    </span>
                  </div>
                  <div class="flex items-center gap-2 mt-2 text-sm text-gray-400">
                    <Icon name="mdi:calendar" class="w-4 h-4" />
                    <span>{exp.period}</span>
                  </div>
                  {exp.context && (
                    <div class="mt-2 inline-block px-3 py-1 bg-purple-500/20 border border-purple-500/30 rounded-full text-xs text-purple-300">
                      {exp.context}
                    </div>
                  )}
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-300 mb-4 leading-relaxed">
                {exp.description}
              </p>

              <!-- Missions -->
              {exp.missions && exp.missions.length > 0 && (
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-purple-300 mb-3 flex items-center gap-2">
                    <Icon name="mdi:check-circle" class="w-5 h-5" />
                    Missions principales
                  </h4>
                  <ul class="space-y-2">
                    {exp.missions.map((mission) => (
                      <li class="flex items-start gap-2 text-sm text-gray-400">
                        <Icon name="mdi:chevron-right" class="w-5 h-5 text-pink-400 flex-shrink-0 mt-0.5" />
                        <span>{mission}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              <!-- Technologies -->
              {exp.technos && exp.technos.length > 0 && (
                <div>
                  <h4 class="text-sm font-semibold text-pink-300 mb-3 flex items-center gap-2">
                    <Icon name="mdi:code-tags" class="w-5 h-5" />
                    Technologies utilisées
                  </h4>
                  <div class="flex flex-wrap gap-2">
                    {exp.technos.map((tech) => (
                      <span class="px-3 py-1 bg-gray-800/50 border border-gray-700 rounded-full text-xs text-gray-300 hover:border-purple-500/50 hover:bg-purple-500/10 transition-colors">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulse-dot {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(168, 85, 247, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(168, 85, 247, 0);
    }
  }

  .pulse-dot {
    animation: pulse-dot 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
